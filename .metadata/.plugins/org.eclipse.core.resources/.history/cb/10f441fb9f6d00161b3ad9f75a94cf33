class Matrix {
	Matrix(int mw, int nw, int pw[][]) {
		p = pw;
		m = mw;
		n = nw;
	}

	Matrix(int mw, int nw) {
		p = new int[m][n];
		m = mw;
		n = nw;
	}

	public int p[][];
	public int m, n;
}

public class RotatePicture {

	public static void main(String[] args) {
		System.out.println("hello world");
		int p[][] = { { 1, 2, 3 }, { 4, 5, 6 }, { 7, 8, 9 } };
		Matrix m = new Matrix(3, 3, p);
		Matrix nm =new RotatePicture.rotatePictureMethod(m, 0);
	}

	Matrix rotatePictureMethod(Matrix matrix, int flag) {
		Matrix newm = new Matrix(matrix.n, matrix.m);
		if (0 == flag) {
			for (int i = 0; i < matrix.m; i++) {
				for (int j = 0; j < matrix.n; j++) {
					newm.p[newm.m - j][i] = matrix.p[i][j];
				}
			}
		} else {
			for (int i = 0; i < matrix.m; i++) {
				for (int j = 0; j < matrix.n; j++) {
					newm.p[j][newm.n - i] = matrix.p[i][j];
				}
			}
		}
		return newm;
	}
}
